{
  "name": "@conversationai/perspectiveapi-js-client",
  "description": "A Javascript client for the Perspective API",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com:conversationai/perspectiveapi-js-client.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "nsp": "nsp check",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint src/**/*.ts",
    "lint:fix": "tslint src/**/*.ts --fix",
    "compile": "rm -rf dist && tsc --sourceMap --outDir dist --declaration",
    "compile:watch": "tsc --sourceMap --outDir dist --declaration --watch"
  },
  "license": "Apache-2.0",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "dependencies": {
    "axios": "^0.21.2",
    "striptags": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^20.0.2",
    "@types/moxios": "^0.4.2",
    "@types/node": "^6.0.73",
    "jest": "^20.0.4",
    "moxios": "^0.4.0",
    "nsp": "^2.6.3",
    "tslint": "^5.3.2",
    "tslint-immutable": "^3.4.2",
    "typescript": "^2.4.1"
  }
}
