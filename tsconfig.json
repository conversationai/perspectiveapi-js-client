{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl" : "./",
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./dist",
    "./src/test"
  ]
}
